{
  "swagger": "2.0",
  "info": {
    "title": "API Antifraude",
    "version": "1.0.0"
  },
  "basePath": "/api",
  "paths": {
    "/verificar": {
      "post": {
        "summary": "Verifica se uma transação é fraudulenta",
        "parameters": [
          {
            "in": "body",
            "name": "transacao",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": { "type": "string" },
                "cpf": { "type": "string" },
                "email": { "type": "string" },
                "cartao": { "type": "string" },
                "valor": { "type": "number" },
                "pais": { "type": "string" },
                "tempoTransacaoSegundos": { "type": "number" }
              },
              "required": ["nome", "cpf", "email", "cartao", "valor", "pais", "tempoTransacaoSegundos"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultado da verificação",
            "schema": {
              "type": "object",
              "properties": {
                "aprovado": { "type": "boolean" },
                "motivos": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "/testes": {
      "get": {
        "summary": "Gera uma transação fake aleatória",
        "responses": {
          "200": {
            "description": "Transação fake",
            "schema": {
              "type": "object"
            }
          }
        }
      }
    }
  }
}
